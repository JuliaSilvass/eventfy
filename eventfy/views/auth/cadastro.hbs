<div class="cardPrincipal">
  <div class="headerLogin">
    <img src="/assets/logo.PNG" alt="Logo Eventfy" class="logoHeader">
    <p class="headerText">Eventfy</p>
  </div>

  <div class="roleSelectionContainer">
    <button type="button" class="roleButton active" id="btnOrganizador">Sou Organizador</button>
    <button type="button" class="roleButton" id="btnFornecedor">Sou Fornecedor</button>
  </div>
  <form>
    <div class="inputFormulario">
      <label for="nome">Nome Completo:</label>
      <input type="text" id="nome" name="nome">
    </div>

    <div class="inputFormulario">
      <label for="email">Email:</label>
      <input type="text" id="email" name="email">
    </div>

    <div class="inputFormulario field-organizer">
      <label for="cpf">CPF:</label>
      <input type="text" id="cpf" name="cpf" maxlength="14">
    </div>
 
    <div class="inputFormulario field-supplier" style="display: none;">
      <label for="cnpj">CNPJ:</label>
      <input type="text" id="cnpj" name="cnpj" maxlength="18">
    </div>

    <div class="inputFormulario">
      <label for="senha">Senha:</label>
      <input type="password" id="senha" name="senha">
    </div>

    <div class="inputFormulario field-organizer">
      <label for="datanasc">Data de Nascimento:</label>
      <input type="date" id="datanasc" name="datanasc">
    </div>

    <div class="inputFormulario">
      <label for="confsenha">Confirme sua Senha:</label>
      <input type="password" id="confsenha" name="confsenha">
    </div>

    <div class="inputFormulario">
      <label for="telefone">Telefone:</label>
      <input type="text" id="telefone" name="telefone" maxlength="15">
    </div>

    <div class="botoesContainer">
      <button type="submit" class="botao botaoConfirmar">Confirmar</button>
      <button type="button" class="botao botaoCancelar">Cancelar</button>
    </div>
  </form>
</div>

<script src="/js/cadastro.js"></script>