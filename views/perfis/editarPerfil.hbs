<div class="pagina-servico"> 
  <h1 class="titulo-pagina">Editar Perfil</h1>

  <form id="form-editar-perfil" action="/perfil/editar" method="POST">
    
    <div class="inputFormulario larguraTotal">
        <label for="nome">Nome Completo</label>
        <input type="text" id="nome" name="nome" value="{{usuario.nome}}" required>
    </div>

    <div class="inputFormulario larguraTotal">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" value="{{usuario.email}}" required>
    </div>
   
    <div class="inputFormulario larguraTotal">
        <label for="telefone">Telefone</label>
        <input type="text" id="telefone" name="telefone" value="{{usuario.telefone}}" maxlength="15" required>
    </div>
    
    {{#if (eq usuario.tipo "fornecedor")}}
      <div class="inputFormulario larguraTotal">
          <label for="sobreNos">Sobre Nós (Descrição)</label>
          <textarea id="sobreNos" name="sobreNos" rows="6" placeholder="Descreva sua empresa, seus serviços e sua experiência...">{{usuario.sobreNos}}</textarea>
      </div>
    {{/if}}
    
    {{#if erro}}
      <div class="inputFormulario larguraTotal">
        <span class="erro" style="display: block;">{{erro}}</span>
      </div>
    {{/if}}

    <div class="botoesContainer">
        <button type="submit" class="botao botaoConfirmar">Salvar Alterações</button>
        <a href="/perfil" class="botao botaoCancelar">Cancelar</a>
    </div>
  </form>
</div>

<script src="/js/editarperfil.js"></script>