<div class="app app--perfil">
  <section class="perfil-header">
    <div class="foto-perfil">
      {{#if usuario.photoURL}}
        <img src="{{usuario.photoURL}}" alt="Foto do usuário" />
      {{else}}
        <img src="/public/images/default.jpg" alt="Foto padrão" />
      {{/if}}
    </div>

    <div class="info-usuario">
      <h3>{{#if usuario.nome}}{{usuario.nome}}{{else}}Usuário{{/if}}</h3>
    </div>

    <div class="stats">
      <div>
        <p><strong>Avaliação</strong></p>
        <p>{{#if usuario.avaliacao}}{{usuario.avaliacao}}{{else}}—{{/if}}</p>
      </div>
      <div>
        <p><strong>Eventos Realizados</strong></p>
        <p>{{#if usuario.eventosRealizados}}{{usuario.eventosRealizados}}{{else}}—{{/if}}</p>
      </div>
    </div>
  </section>

  <hr>

  <div class="container-secoes">
    <section class="secao">
      <h2>Meus Eventos</h2>
      <div class="cards">
        {{#if eventos.length}}
          {{#each eventos}}
            <a href="/perfilEdicao/{{this.id}}" class="card card-evento">
              {{this.nome}}
            </a>
          {{/each}}
        {{else}}
          <p>Nenhum evento ainda</p>
        {{/if}}
      </div>

      <div class="botoes">
        <a href="/eventos/novo" class="btn">Criar evento</a>
        <button class="btn">Ver Tudo</button>
      </div>
    </section>

    <hr>

    <section class="secao">
      <h2>Empresas favoritas</h2>
      <div class="cards">
        {{#each empresas}}
          <div class="card card-empresa"></div>
        {{/each}}
        {{#unless empresas}}
          <p>Nenhuma empresa favorita</p>
        {{/unless}}
      </div>
      <div class="botoes">
        <button class="btn">Ver Tudo</button>
      </div>
    </section>
  </div>
</div>
