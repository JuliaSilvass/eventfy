<div class="container-novo-evento">
  <h2 class="titulo-novo-evento">Criar novo evento</h2>

  <form id="formNovoEvento" action="/eventos/novo" method="POST" class="form-novo-evento">
    
    {{#if erros.geral}}
      <div class="larguraTotal">
        <span class="erro">{{erros.geral}}</span>
      </div>
    {{/if}}

    <div class="coluna-esquerda">
      <label for="nome">Nome do evento</label><br>
      <input 
        type="text" 
        id="nome" 
        name="nome" 
        value="{{evento.nome}}" 
        class="{{#if erros.nome}}input-erro{{/if}}"
        required
      >
      <span id="msg-nome" class="msg-erro">{{erros.nome}}</span>
      <br>

      <div class="grupo-duplo">
        <div>
          <label for="dataInicio">Data de início</label><br>
          <input 
            type="date" 
            id="dataInicio" 
            name="dataInicio" 
            value="{{evento.dataInicio}}" 
            class="{{#if erros.dataInicio}}input-erro{{/if}}"
            required
          >
          <span id="msg-dataInicio" class="msg-erro">{{erros.dataInicio}}</span>
        </div>
     
        <div>
          <label for="dataFim">Data de fim</label><br>
          <input 
            type="date" 
            id="dataFim" 
            name="dataFim" 
            value="{{evento.dataFim}}" 
            class="{{#if erros.dataFim}}input-erro{{/if}}"
            required
          >
          <span id="msg-dataFim" class="msg-erro">{{erros.dataFim}}</span>
        </div>
      </div><br>

      <div class="grupo-duplo">
        <div>
          <label for="horarioInicio">Horário de início</label><br>
          <input 
            type="time" 
            id="horarioInicio" 
            name="horarioInicio" 
            value="{{evento.horarioInicio}}" 
            class="{{#if erros.horarioInicio}}input-erro{{/if}}"
            required
          >
          <span id="msg-horarioInicio" class="msg-erro">{{erros.horarioInicio}}</span>
        </div>
      
        <div>
          <label for="horarioFim">Horário de fim</label><br>
          <input 
            type="time" 
            id="horarioFim" 
            name="horarioFim" 
            value="{{evento.horarioFim}}" 
            class="{{#if erros.horarioFim}}input-erro{{/if}}"
            required
          >
          <span id="msg-horarioFim" class="msg-erro">{{erros.horarioFim}}</span>
        </div>
      </div><br>

      <label for="icone">Ícone</label><br>
      <select id="icone" name="icone" required>
        <option value="aniversario" {{#if (eq evento.icone "aniversario")}}selected{{/if}}>Aniversário</option>
        <option value="workshop" {{#if (eq evento.icone "workshop")}}selected{{/if}}>Workshop</option>
        <option value="casamento" {{#if (eq evento.icone "casamento")}}selected{{/if}}>Casamento</option>
        <option value="festa" {{#if (eq evento.icone "festa")}}selected{{/if}}>Festa</option>
        <option value="outros" {{#if (eq evento.icone "outros")}}selected{{/if}}>Outros</option>
      </select>
    </div>

    <div class="coluna-direita">
      <label for="descricao">Sobre o evento</label><br>
      <textarea 
        id="descricao" 
        name="descricao" 
        rows="10" 
        placeholder="Descreva o evento..."
        class="{{#if erros.descricao}}input-erro{{/if}}"
      >{{evento.descricao}}</textarea>
      <span id="msg-descricao" class="msg-erro">{{erros.descricao}}</span>
    </div>

    <div class="botoes-novo-evento">
      <a href="/perfil" class="botao-cancelar">Cancelar</a>
      <button type="submit" class="botao-confirmar">Continuar e Adicionar Serviços</button>
    </div>
  </form>
</div>

<script src="/js/novoEvento.js"></script>