<style>
  body {
    background-color: #f7f5f3;
  }
</style>

<div class="container-novo-evento">
  <h2 class="titulo-novo-evento">Criar novo evento</h2>

  <form id="eventForm" action="/eventos/novo" method="POST" class="form-novo-evento">
    <div class="coluna-esquerda">
      <label for="nome">Nome do evento</label><br>
      <input type="text" id="nome" name="nome" required><br>

      <div class="grupo-duplo">
        <div>
          <label for="dataInicio">Data de início</label><br>
          <input type="date" id="dataInicio" name="dataInicio" required>
        </div>
        <div>
          <label for="dataFim">Data de fim</label><br>
          <input type="date" id="dataFim" name="dataFim" required>
        </div>
      </div><br>

      <div class="grupo-duplo">
        <div>
          <label for="horarioInicio">Horário de início</label><br>
          <input type="time" id="horarioInicio" name="horarioInicio" required>
        </div>
        <div>
          <label for="horarioFim">Horário de fim</label><br>
          <input type="time" id="horarioFim" name="horarioFim" required>
        </div>
      </div><br>

      <label for="icone">Ícone</label><br>
      <select id="icone" name="icone" required>
        <option value="aniversario">Aniversário</option>
        <option value="workshop">Workshop</option>
        <option value="casamento">Casamento</option>
        <option value="festa">Festa</option>
        <option value="outros">Outros</option>
      </select>
    </div>

    <div class="coluna-direita">
      <label for="descricao">Sobre o evento</label><br>
      <textarea id="descricao" name="descricao" rows="10" placeholder="Descreva o evento..."></textarea>
    </div>

    <div class="botoes-novo-evento">
      <a href="/perfil" class="botao-cancelar">Cancelar</a>
      <button type="submit" class="botao-confirmar">Confirmar</button>
    </div>
  </form>
</div>
